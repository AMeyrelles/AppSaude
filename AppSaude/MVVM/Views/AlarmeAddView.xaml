<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local ="clr-namespace:AppSaude.MVVM.ViewModels"
             x:DataType="local:AlarmeViewModel"
             x:Class="AppSaude.MVVM.Views.AlarmeAddView"          
             Title="Novo alarme">


    <ContentPage.Resources>
        
        <Style TargetType="Entry">
            <Setter Property="FontSize" Value="Large"/>
            <Setter Property="CharacterSpacing" Value="2"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="TextColor" Value="White"/>
        </Style>
        
        <Style TargetType="Border">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="10,5,0,0"/>
            <Setter Property="BackgroundColor" Value="#195986"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="White"/>
        </Style>

    </ContentPage.Resources>

    <Grid BackgroundColor="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="90*"/>

            <RowDefinition Height="15*"/>           
        </Grid.RowDefinitions>           
           
        <!-- Entrys para inserir os dados -->
        <VerticalStackLayout 
                Grid.Row="0"
                Padding="10" >
                <Border Stroke="AliceBlue">
                  <Border.StrokeShape>
                     <RoundRectangle CornerRadius="6" />
                  </Border.StrokeShape>
                       <Entry Text="{Binding AlarmeAtual.MedicationName, Mode=TwoWay}"  x:Name="txtName" Placeholder="Nome do medicamento"/>
                </Border>

              <Border Stroke="AliceBlue">
                     <Border.StrokeShape>
                         <RoundRectangle CornerRadius="6" />
                     </Border.StrokeShape>
                <Entry TextColor="White" Text="{Binding AlarmeAtual.PatientName, Mode=TwoWay}" x:Name="txtNameuser" Placeholder="Quem vai tomar?"/>
              </Border>

              <Border Stroke="AliceBlue">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="6" />
                </Border.StrokeShape>
                <Entry Text="{Binding AlarmeAtual.Description, Mode=TwoWay}" x:Name="txtDescrição" Placeholder="Insira o uma descrição"/>
              </Border>

            <Border Stroke="AliceBlue">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="6" />
                </Border.StrokeShape>
                
                <VerticalStackLayout HorizontalOptions="Center">
                    <Label                         
                        Padding="0,0,0,0"
                        FontSize="Medium"
                        TextColor="White"
                        Text="Ative o alarme para receber a notificação"                        
                    />
                    
                    <Switch  
                      HorizontalOptions="Center"
                      x:Name="AlarmSwitch"
                      IsToggled="{Binding AlarmeAtual.IsEnabled}"
                      OnColor="#5184c0"
                      ThumbColor="White"
                      Toggled="AlarmSwitch_Toggled"                     
                    />

                </VerticalStackLayout>

            </Border>
            <!-- TimerPicker -->
               <Border                                          
                     WidthRequest="390"
                     HeightRequest="130"
                     HorizontalOptions="Center"
                     Stroke="AliceBlue"                    
                     >
                   <Border.StrokeShape>
                     <RoundRectangle CornerRadius="6" />
                   </Border.StrokeShape>

                   <VerticalStackLayout HorizontalOptions="Center">
                      <Label 
                        Padding="0,0,0,0"
                        FontSize="Medium"
                        TextColor="White"
                        Text="Insira o horario do alarme"                        
                      />

                      <TimePicker  
                         Time="{Binding AlarmeAtual.ReminderTime}"
                         FontSize="50"
                         HorizontalOptions="Center"
                         x:Name="TimePickerControl" 
                      />

                   </VerticalStackLayout>
               </Border>

        </VerticalStackLayout>

        <HorizontalStackLayout                 
               Grid.Row="2" HorizontalOptions="Center">
               
              <Button      
                             Clicked="btnCancelarAlarme_Clicked"                             
                             x:Name="btnCancelarAlarme"                          
                             TextColor="White"
                             Text="CANCELAR"                 
                             HeightRequest="60"
                             WidthRequest="100"  
                             Margin="20"                             
              />

              <Button      
                             Command="{Binding SaveCommand}"
                             Clicked="btnAddAlarme_Clicked"
                             x:Name="btnAddAlarme"                           
                             TextColor="White"
                             Text="SALVAR"                 
                             HeightRequest="60"
                             WidthRequest="100" 
                             Margin="20"
              />
            
        </HorizontalStackLayout>
        
    </Grid>
</ContentPage>